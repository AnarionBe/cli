{
    "langages": {
        "Node.js": [],
        "PHP": []
    },
    "databases": {
        "MySQL": ["phpMyAdmin"],
        "PostgreSQL": ["pgAdmin"],
        "MongoDB": ["mongoclient"]
    },
    "tools": ["redis", "mailcatcher"],
    "services": {
        "PHP": {
            "name": "php",
            "configuration": {
                "image": "php:apache",
                "volumes": ["./src:/var/www/html"],
                "ports": ["80:80"]
            }
        },
        "Node.js": {
            "name": "node",
            "configuration": {
                "image": "becodeorg/node",
                "environment": {
                    "NODE_ENV": "development"
                },
                "volumes": [
                    "./package.json:/src/app/package.json",
                    "./node_modules:/src/app/node_modules",
                    "./bin:/src/app/bin"
                ],
                "expose": ["12345", "9229"],
                "ports": ["80:12345", "9229"],
                "command": "nodemon --inspect=0.0.0.0:9229 --watch bin"
            }
        },
        "MySQL": {
            "name": "mysql",
            "configuration": {
                "image": "mysql:latest",
                "restart": "always",
                "volumes": ["./db/mysql:/var/lib/mysql"],
                "environment": {
                    "MYSQL_ROOT_PASSWORD": "root",
                    "MYSQL_DATABASE": "dev",
                    "MYSQL_USER": "dev",
                    "MYSQL_PASSWORD": "dev"
                }
            }
        },
        "phpMyAdmin": {
            "name": "phpmyadmin",
            "configuration": {
                "image": "phpmyadmin/phpmyadmin",
                "ports": ["8001:80"],
                "environment": {
                    "PMA_HOST": "mysql",
                    "PMA_USER": "dev",
                    "PMA_PASSWORD": "dev"
                }
            }
        },
        "PostgreSQL": {
            "name": "postgresql",
            "configuration": {
                "image": "postgres",
                "restart": "always",
                "volumes": ["./db/postgres:/var/lib/postgresql/data"],
                "ports": ["5432:5432"],
                "environment": {
                    "POSTGRES_USER": "dev",
                    "POSTGRES_PASSWORD": "dev"
                }
            }
        },
        "pgAdmin": {
            "name": "pgadmin",
            "configuration": {
                "image": "dpage/pgadmin4",
                "ports": ["8002:80"],
                "environment": {
                    "PGADMIN_DEFAULT_EMAIL": "dev@dev.com",
                    "PGADMIN_DEFAULT_PASSWORD": "dev"
                }
            }
        }
    }
}
