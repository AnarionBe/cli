{
    "apps": {
        "Wordpress": ["Wordpress", "MySQL:Old", "phpMyAdmin"],
        "Joomla": ["Joomla", "MySQL:Old", "phpMyAdmin"],
        "Drupal": ["Drupal", "MySQL:Old", "phpMyAdmin"],
        "Ghost": ["Ghost"]
    },
    "langages": {
        "Node.js": [],
        "PHP": [],
        "Python": [],
        "Ruby": []
    },
    "databases": {
        "MySQL": ["phpMyAdmin"],
        "MariaDB": ["phpMyAdmin"],
        "PostgreSQL": ["pgAdmin"],
        "MongoDB": ["MongoExpress"],
        "InfluxDB": [],
        "RethinkDB": [],
        "CouchDB": [],
        "Neo4j": [],
        "ArangoDB": []
    },
    "tools": ["Redis", "RabbitMQ", "Memcached", "MailCatcher"],
    "services": {
        "Wordpress": {
            "name": "wordpress",
            "configuration": {
                "image": "wordpress",
                "restart": "always",
                "volumes": [
                    "./data/wordpress/wp-content:/var/www/html/wp-content/"
                ],
                "depends_on": ["mysql"],
                "ports": ["80:80"],
                "environment": {
                    "WORDPRESS_DB_PASSWORD": "root"
                }
            }
        },
        "Drupal": {
            "name": "drupal",
            "configuration": {
                "image": "drupal",
                "restart": "always",
                "volumes": [
                    "./data/drupal/modules:/var/www/html/modules",
                    "./data/drupal/profiles:/var/www/html/profiles",
                    "./data/drupal/sites:/var/www/html/sites",
                    "./data/drupal/themes:/var/www/html/themes"
                ],
                "depends_on": ["mysql"],
                "ports": ["80:80"],
                "environment": {
                    "MYSQL_USER": "root",
                    "MYSQL_PASSWORD": "root"
                }
            },
            "commands": [
                "mkdir -p ./data/drupal/sites",
                "docker run --rm drupal tar -cC /var/www/html/sites . | tar -xC ./data/drupal/sites"
            ]
        },
        "Joomla": {
            "name": "joomla",
            "configuration": {
                "image": "joomla",
                "restart": "always",
                "volumes": ["./data/joomla:/var/www/html"],
                "depends_on": ["mysql"],
                "ports": ["80:80"],
                "environment": {
                    "JOOMLA_DB_HOST": "mysql:3306",
                    "JOOMLA_DB_PASSWORD": "root"
                }
            }
        },
        "Ghost": {
            "name": "ghost",
            "configuration": {
                "image": "ghost",
                "volumes": ["./data/ghost:/var/lib/ghost/content"],
                "ports": ["80:2368"],
                "environment": {
                    "url": "http://localhost"
                }
            }
        },
        "PHP": {
            "name": "php",
            "configuration": {
                "image": "php:apache",
                "volumes": ["./src:/var/www/html"],
                "ports": ["80:80"]
            }
        },
        "Node.js": {
            "name": "node",
            "configuration": {
                "image": "becodeorg/node",
                "environment": {
                    "NODE_ENV": "development"
                },
                "volumes": [
                    "./package.json:/src/app/package.json",
                    "./node_modules:/src/app/node_modules",
                    "./bin:/src/app/bin"
                ],
                "expose": ["12345", "9229"],
                "ports": ["80:12345", "9229"],
                "command": "nodemon --inspect=0.0.0.0:9229 --watch bin"
            }
        },
        "MariaDB": {
            "name": "mysql",
            "configuration": {
                "image": "mariadb",
                "restart": "always",
                "ports": ["3306:3306", "33060:33060"],
                "volumes": ["./db/mysql:/var/lib/mysql"],
                "environment": {
                    "MYSQL_ROOT_PASSWORD": "root"
                }
            }
        },
        "MySQL": {
            "name": "mysql",
            "configuration": {
                "image": "mysql",
                "restart": "always",
                "ports": ["3306:3306", "33060:33060"],
                "volumes": ["./db/mysql:/var/lib/mysql"],
                "environment": {
                    "MYSQL_ROOT_PASSWORD": "root"
                }
            }
        },
        "MySQL:Old": {
            "name": "mysql",
            "configuration": {
                "image": "mysql:5",
                "restart": "always",
                "ports": ["3306:3306", "33060:33060"],
                "volumes": ["./db/mysql:/var/lib/mysql"],
                "environment": {
                    "MYSQL_ROOT_PASSWORD": "root"
                }
            }
        },
        "phpMyAdmin": {
            "name": "phpmyadmin",
            "configuration": {
                "image": "phpmyadmin/phpmyadmin",
                "ports": ["8001:80"],
                "depends_on": ["mysql"],
                "environment": {
                    "PMA_HOST": "mysql",
                    "PMA_USER": "root",
                    "PMA_PASSWORD": "root"
                }
            }
        },
        "PostgreSQL": {
            "name": "postgres",
            "configuration": {
                "image": "postgres",
                "restart": "always",
                "volumes": ["./db/postgres:/var/lib/postgresql/data"],
                "ports": ["5432:5432"],
                "environment": {
                    "POSTGRES_USER": "dev",
                    "POSTGRES_PASSWORD": "dev"
                }
            }
        },
        "pgAdmin": {
            "name": "pgadmin",
            "configuration": {
                "image": "dpage/pgadmin4",
                "ports": ["8002:80"],
                "depends_on": ["postgres"],
                "environment": {
                    "PGADMIN_DEFAULT_EMAIL": "dev@dev.com",
                    "PGADMIN_DEFAULT_PASSWORD": "dev"
                }
            }
        },
        "MongoDB": {
            "name": "mongo",
            "configuration": {
                "image": "mongo",
                "restart": "always",
                "ports": ["27017:27017"],
                "volumes": ["./db/mongodb:/data/db"],
                "environment": {
                    "MONGO_INITDB_ROOT_USERNAME": "dev",
                    "MONGO_INITDB_ROOT_PASSWORD": "dev"
                }
            }
        },
        "MongoExpress": {
            "name": "mongoexpress",
            "configuration": {
                "image": "mongo-express",
                "ports": ["8003:8081"],
                "depends_on": ["mongo"],
                "environment": {
                    "ME_CONFIG_MONGODB_SERVER": "mongo",
                    "ME_CONFIG_MONGODB_ADMINUSERNAME": "dev",
                    "ME_CONFIG_MONGODB_ADMINPASSWORD": "dev"
                }
            }
        }
    }
}
